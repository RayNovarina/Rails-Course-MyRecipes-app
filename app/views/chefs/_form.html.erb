<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @chef do |f| %>
      <%= f.label 'Chef Name' %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
          
      <%= f.label 'About Me' %>
      <%= f.text_area :about_me %>
    
      <%= f.submit(@chef.new_record? ? 'Register' : 'Edit profile', class: "btn btn-success") %>
    <% end %>
  </div>
</div>
<h5>
  <%= link_to("Back",                  :back,      class: "btn btn-warning btn-small") %>
</h5>